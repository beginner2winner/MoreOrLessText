<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beginner2winner.moreorlesstext.sample.MainActivity">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:text="Plain Text"/>

    <com.beginner2winner.moreorlesstext.MoreOrLessText
        android:id="@+id/tv"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:background="@color/red"
        app:moreTextColour="@color/green"
        app:lessTextColour="@color/blue"
        android:layout_width="140dp"
        android:layout_height="300dp"
        android:text="Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 Hello World! 1234567890 END."
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="180dp"
        android:text="HTML Text"/>

    <com.beginner2winner.moreorlesstext.MoreOrLessText
        android:id="@+id/tv2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="180dp"
        android:background="@color/red"
        android:layout_width="140dp"
        android:layout_height="300dp"
        android:text="press button to load html"
        app:lessLines="5"
        app:moreTextColour="@color/blue"
        app:lessTextColour="@color/green"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:text="Load HTML" />

</FrameLayout>
